<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/background_main">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navigation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view"
            android:layout_width="34dp"
            android:layout_height="34dp"
            tools:src="@drawable/binance"
            android:layout_marginStart="32dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Binance (Futures)"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_medium"
            android:layout_marginStart="16dp"/>
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            app:contentPadding="24dp"
            app:cardBackgroundColor="@color/granite">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_page"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/url_text_view"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    tools:text="https://www.binance.com/"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:autoLink="web"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/page"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/first_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/page"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year_established"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/first_line"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/year_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/year"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/second_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/year"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/future"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_futures"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/second_line"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/number_futures_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="42"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/future"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/third_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/future"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/perpetual"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/number_perpetual"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/third_line"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/number_perpetual_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="237"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/perpetual"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>