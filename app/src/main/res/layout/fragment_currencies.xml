<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/background_main">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <HorizontalScrollView
                        android:id="@+id/scroll_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/dark_green"
                                app:cardCornerRadius="8dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/first_image"
                                        android:layout_width="10dp"
                                        android:layout_height="0dp"
                                        android:background="@drawable/background_scroll"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        tools:ignore="TooDeepLayout"/>
                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/defi_cap"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/defi_cap_upper_case"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginTop="8dp"
                                        app:layout_constraintStart_toEndOf="@id/first_image"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>
                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/defi_cap_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="36 037 228 205 $"
                                        android:textSize="16sp"
                                        android:textColor="@color/white"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintStart_toEndOf="@id/first_image"
                                        app:layout_constraintTop_toBottomOf="@id/defi_cap"
                                        app:layout_constraintBottom_toBottomOf="parent"/>
                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/dominance_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="4.1%"
                                        android:textSize="16sp"
                                        android:textColor="@color/white"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintEnd_toEndOf="@id/defi_cap"
                                        app:layout_constraintTop_toTopOf="@id/defi_cap_text_view" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/dark_green"
                                app:cardCornerRadius="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="16dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/second_image"
                                        android:layout_width="10dp"
                                        android:layout_height="0dp"
                                        android:background="@drawable/background_scroll"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"/>
                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/volume"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/total_volume_upper_case"
                                        android:textSize="12sp"
                                        android:textColor="@color/gray"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginTop="8dp"
                                        app:layout_constraintStart_toEndOf="@id/second_image"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>
                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/volume_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="2 103 725 008 $"
                                        android:textSize="16sp"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintStart_toStartOf="@id/volume"
                                        app:layout_constraintTop_toBottomOf="@id/volume"
                                        app:layout_constraintBottom_toBottomOf="parent"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </HorizontalScrollView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/sort_card_view"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/granite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scroll_view">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sort"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_sans_regular"/>
                            <Space
                                android:layout_width="8dp"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/sort_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Рейтинг"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_sans_regular"/>
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_down_icon"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/octothorp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/octothorp"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sort_card_view"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coin_upper_case"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toEndOf="@id/octothorp"
                        app:layout_constraintTop_toBottomOf="@id/sort_card_view"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_upper_case"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_marginEnd="70dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@id/change"
                        app:layout_constraintTop_toBottomOf="@id/sort_card_view"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day_upper_case"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_marginEnd="168dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sort_card_view"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cap_upper_case"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toEndOf="@id/change"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sort_card_view"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linear"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/granite"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/octothorp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/currencies_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            tools:listitem="@layout/currencies_item"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/no_internet_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gecko_could_not_connect"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        app:drawableTopCompat="@drawable/no_connection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/repeat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="@string/repeat"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_regular"
        android:textAllCaps="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_internet_text_view"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>